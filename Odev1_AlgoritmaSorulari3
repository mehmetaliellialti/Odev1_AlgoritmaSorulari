using System;

Console.Write("Pozitif bir sayı giriniz (n): ");
int n;

// n için pozitiflik kontrolü
while (!int.TryParse(Console.ReadLine(), out n) || n <= 0)
{
    Console.Write("Hatalı giriş! Pozitif bir sayı giriniz: ");
}

string[] kelimeler = new string[n];

// n adet kelime alma
for (int i = 0; i < n; i++)
{
    Console.Write((i + 1) + ". kelimeyi giriniz: ");
    kelimeler[i] = Console.ReadLine();
}

// Sondan başa doğru yazdırma
Console.WriteLine("\nKelimelerin sondan başa doğru yazılışı:");

for (int i = n - 1; i >= 0; i--)
{
    Console.WriteLine(kelimeler[i]);
}
